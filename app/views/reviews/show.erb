
<div class="jumbotron p-3 p-md-5 text-white bg-dark">
        <div class="col-md-6 px-0">
          <h1 class="display-4 font-italic"><%= @review.school.name %></h1>
          <p class="lead my-3"><%= @review.category.name %></p>
        </div>
      </div>
<h1></h1>

<h5><%= "#{@review.student.full_name} says:" %></h5>
<p><%= @review.content %></p>
<p>Rating: <%= @review.rating %></p>

<%= button_to "Edit Review", edit_review_path(@review), method: "get" %>
<%= button_to "Delete Review", @review, method: "delete" %>
